<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tourplanner.view.controller.TourDescriptionController">
   <children>
       <Label fx:id="title" prefHeight="0.0" prefWidth="383.0" text="Title: ">
           <padding>
               <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
           </padding>
       </Label>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#displayTourDescription" prefHeight="25.0" prefWidth="79.0" text="Description" />
            <Button mnemonicParsing="false" onAction="#displayFrom" text="From" />
            <Button mnemonicParsing="false" onAction="#displayTo" text="To" />
            <Button mnemonicParsing="false" onAction="#displayTransportType" prefHeight="25.0" prefWidth="98.0" text="TransportType" />
            <Button mnemonicParsing="false" onAction="#displayDistance" prefHeight="25.0" prefWidth="74.0" text="Distance" />
            <Button mnemonicParsing="false" onAction="#displayTime" prefHeight="25.0" prefWidth="109.0" text="Estimated Time" />
            <Button mnemonicParsing="false" onAction="#displayTourInfo" prefHeight="25.0" prefWidth="55.0" text="Route" />
         </children>
      </HBox>
      <TextArea fx:id="desc" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
