<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tourplanner.view.controller.TourDescriptionController">
   <children>
      <HBox maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefHeight="0.0" prefWidth="70.0" text="Title:" />
                        <TextField fx:id="titleInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="From:" />
                        <TextField fx:id="fromInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="To:" />
                        <TextField fx:id="toInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="Transport" />
                        <TextField fx:id="transportInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="Distance:" />
                        <TextField fx:id="distanceInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="Time:" />
                        <TextField fx:id="timeInput" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <Label maxHeight="1.7976931348623157E308" prefWidth="70.0" text="Description:" />
                        <TextArea fx:id="descriptionInput" maxHeight="1.7976931348623157E308" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets bottom="4.3" />
               </HBox.margin>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="300.0">
               <children>
                  <ImageView fx:id="imageView" fitHeight="290" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="update" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#updateTour" text="Update">
                     <padding>
                        <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
                     </padding>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets bottom="4.3" left="8.7" right="8.7" top="4.3" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="4.3" />
